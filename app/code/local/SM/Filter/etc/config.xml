<?xml version="1.0"?>
<config>
    <modules>
        <SM_Filter>
            <version>0.1.0</version>
        </SM_Filter>
    </modules>
    <global>
        <models>
            <sm_filter>
                <class>SM_Filter_Model</class>
                <resourceModel>sm_filter_resource</resourceModel>
            </sm_filter>
            <sm_filter_resource>
                <class>SM_Filter_Model_Resource</class>
            </sm_filter_resource>
        </models>
        <blocks>
            <sm_filter>
                <class>SM_Filter_Block</class>
            </sm_filter>
        </blocks>
        <helpers>
            <sm_filter>
                <class>SM_Filter_Helper</class>
            </sm_filter>
        </helpers>
        <resources>
            <sm_filter_setup>
                <setup>
                    <module>SM_Filter</module>
                </setup>
            </sm_filter_setup>
        </resources>

        <rewrite>
            <sm_filter_catalog_category>
                <from><![CDATA[#^catalog/category/view/#]]></from>
                <to>filter/catalog_category/view/</to>
            </sm_filter_catalog_category>
        </rewrite>

    </global>
    <frontend>
        <routers>
            <sm_filter>
                <use>standard</use>
                <args>
                    <module>SM_Filter</module>
                    <frontName>filter</frontName>
                </args>
            </sm_filter>
        </routers>
        <layout>
            <updates>
                <sm_filter>
                    <file>sm_filter.xml</file>
                </sm_filter>
            </updates>
        </layout>
    </frontend>
</config>